{% extends 'base.html.twig' %}

{% block title %}Mon compte - La boutique Française{% endblock %}

{% block content %}
    <h1>Mon compte</h1>

    <p>Bienvenue {{ app.user.firstname }} dans votre compte</p>

    <hr>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="/admin">Accéder au back office</a><br>
    {% endif %}
    <a href="{{ path('app_account_password') }}">Modifier mot de passe</a><br>
    <a href="{{ path('app_account_address') }}">Gérer mes adresses</a><br>
    <a href="{{ path('app_account_order') }}">Mes commandes</a><br>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Valider la commande - La Boutique Française{% endblock %}

{% block content %}
    <h2>Je passe ma commande</h2>

    <p>Choisissez vos préférences</p>

    <hr>

    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form(form) }}
            {% endset %}

            {{  formHtml|replace({'[br]' : '<br>'})|raw }}
        </div>
        <div class="col-md-6">
            <b>Choisir mon adresse de livraison</b><br>
            <b>Choisir mon transporteur </b>
        </div>
    </div>
{% endblock %}
